<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/javascripts/jquery-3.5.1.js" type="text/javascript"></script>
    <script src="/javascripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="/javascripts/list.js" type="text/javascript"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="<%= url_for(action: 'index', controller: 'home', only_path: false) %>">LIMS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="<%= url_for(action: 'index', controller: 'home', only_path: false) %>">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item active">
                    <a class="nav-link" href="<%= url_for(action: 'index', controller: 'data_resolves', only_path: false) %>">Data Resolves <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="main m-3">
        <div class="row mt-3 border-bottom">
            <div class="col-3 border-right">
                <div class="m-labs">
                    <h3 class="border-bottom">Molecular Labs</h3>
                    <ul class="nav flex-column">
                        <% @labs.each do |lab| %>
                            <li class="nav-item">
                                <button class="btn" onclick="loadData('<%= lab[0] %>')" id="<%= lab[0] %>"><%= lab[1] %> </button>
                            </li> 
                        <% end %>                       
                    </ul>
                </div>
                <div class="gxepert-sites mt-3">
                    <h3 class="border-bottom">Genexepert Sites</h3>
                    <div id="sites">
                        <input class="search form-control" placeholder="Search site" />
                        <div style="overflow: scroll; height:320px;">
                            <ul class="nav flex-column list">
                                
                                    <% @genexpert_labs.each do |genexpert_lab| %>
                                        <li class="nav-item">                     
                                            <button class="btn name" onclick="loadData('<%= genexpert_lab[0] %>')" id="<%= genexpert_lab[0] %>"><%= genexpert_lab[1] %> </button>              
                                        </li>
                                    <% end %> 
                                
                            </ul>
                        </div>
                    </div>
                
                </div>
            </div>
            <div class="col-9 shadow p-3 mb-5 bg-white rounded">
                <div class="header border-bottom" style="display:none;">
                    <h3 id="head-title">LAB: <span id="lab"></span><span class="ml-5"></span>Date:<span id="timeline">June 2021</span></h3>
                </div>
                <div class="filter mt-2 border-bottom" style="display:none;">
                    <form>
                        <div class="form-group">
                            <label for="start">Filter by date:</label>
                            <input type="date" id="date" name="date">
                            <button type="submit">Submit</button>
                        </div>
                    </form>
                </div>
                <div class="row border-bottom p-2">
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-orders-submitted">!</h5>
                                <p class="card-text border-top">Total Orders Submitted</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-orders-accepted">!</h5>
                                <p class="card-text border-top">Total Orders Accepted </p>
                            </div>
                        </div>
                    </div>

                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-orders-rejected">!</h5>
                                <p class="card-text border-top">Total Orders Rejected</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-3 border-bottom">
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title"  style="color:red; font-size:25px;" id="total-tests">!</h5>
                                <p class="card-text border-top">Total Tests</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-tests-verrified">!</h5>
                                <p class="card-text border-top">Total Tests Verrified</p>
                            </div>
                        </div>
                    </div>

                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-tests-with-results">!</h5>
                                <p class="card-text border-top">Total Tests with Results</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-tests-waiting-results">!</h5>
                                <p class="card-text border-top">Total Tests waiting Results</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-tests-rejected">!</h5>
                                <p class="card-text border-top">Total Tests Rejected</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-4 mb-2">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title" style="color:red; font-size:25px;" id="total-tests-to-be-started">!</h5>
                                <p class="card-text border-top">Total Tests to be started</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row mt-3 border-bottom">
                    <div class="col-4 mb-2">
                        <p>Sync Status: <span class="text-success"> Online</span></p>
                    </div>
                    <div class="col-6 mb-2 text-center">
                        <p>Last Sync: <span class="bg-secondary text-white p-1" id="last_sync">26/05/21 13:30</span></span>
                        </p>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="footer m-auto">
                        <p class="text-muted">Developed by LIMS team</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </div>
    </div>

    </div>
    </div>
    
    
    <script src="/javascripts/scripts/lab.js" type="text/javascript"></script>
</body>

</html>
