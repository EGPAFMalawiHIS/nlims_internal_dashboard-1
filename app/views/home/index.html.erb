    function loadData(lab){
       
        var period = "false";
        var url = "/query_lab_stats_total_orders?lab_name=" + lab +"&period="+period;
        jQuery.ajax({
            url: url,
            type: "Post",
            success: function(res){
                $("#total-orders-submitted").text(res);
                $("#total-orders-submitted").style.color = "black";
            },
            error: function(err){
                alert("error");
            }
        })


        var url = "/query_lab_stats_total_tests?lab_name=" + lab +"&period="+period;
        jQuery.ajax({
            url: url,
            type: "Post",
            success: function(res){
                $("#total-tests").text(res);
            },
            error: function(err){
                alert("error");
            }
        })
        var url = "/query_lab_stats_total_tests_verrified?lab_name=" + lab +"&period="+period;
        jQuery.ajax({
            url: url,
            type: "Post",
            success: function(res){
                $("#total-tests-verrified").text(res);
            },
            error: function(err){
                alert("error");
            }
        })

    }

